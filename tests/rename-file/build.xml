<project>
    <property name="src.dir" value="src"/>
    <property name="build.dir" value="build"/>

    <target name="clean">
        <delete dir="${build.dir}"/>
    </target>
    <target name="compile">
        <mkdir dir="${build.dir}"/>
        <copy todir="${build.dir}">
            <fileset dir="${src.dir}"/>
        </copy>
    </target>

    <target name="rename" depends="clean,compile">
        <move file="${build.dir}/hello.txt" tofile="${build.dir}/world.txt"></move>
    </target>
</project>